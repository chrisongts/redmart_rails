            </li> -->
            <li>
              <%= link_to "About", about_path %>
            </li>
            <li>
              <%= if logged_in?
                # link_to "Reset Password", edit_user_path(user)
                link_to "Reset Password", edit_user_path(User.find_by(id: session[:user_id]))
                else
                  link_to "Sign Up", signup_path
                end %>
            </li>
            <li>
              <%= link_to "Help", help_path %>
            </li>
