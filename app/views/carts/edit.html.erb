<h3>Editing Item in Cart</h3>

<% user = User.find_by_id(session[:user_id]) %>

<%= form_for(@cart, url: user_cart_path(session[:user_id])) do |f| %>
<div class="actions">
  <div class="field">
    <%= f.label :user_id %>
    <%= f.text_field :user_id, disabled:true, value:user.email %>
    <%= f.hidden_field :user_id, value:user.id %>
  </div>

  <div class="field">
    <%= f.label :product_id %>
    <%= f.text_field :product_id, disabled:true, value:@product.name %>
    <%= f.hidden_field :product_id, value:@product.id %>
  </div>

  <div class="field">
    <%= f.label :quantity %>
    <%= f.text_field :quantity %>
  </div>

  <%= f.submit %>
</div>
<% end %>
